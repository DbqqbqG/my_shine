wget https:// \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ скачать файл
wget -0 NAME_FILE https:// \\\\\\\\\\\\\\\\\\\\\ скачать и переименовать файл
wget --limit-rate=333K https:// \\\\\\\\\\\\\\\\\ огроничение скорости работы утилиты, K-килобайт, M-мегобайт.
wget -c https:// \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ продолжить скачивать прерваную загрузку
wget -b https:// \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ фоновая загрузка файла
wget -I FILE.txt \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ скачивание нескольких файлов, внесенных в файл(каждая ссылка должна распологаться на новой строке)
wget --tries=100 https:// \\\\\\\\\\\\\\\\\\\\\\\\\\\ увеличение попыток скачивание файла
wget FTP-url \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ скачать файл по FTP протоколу
	wget ftp-user=NAME --ftp-password=****** FTP-url \\\\\\\\\ если требуется ввести пароль и логин
 
wget --mirror -p --convert-links -P /home/dbq/ https:// \\\\\\\\\\\ Создание локальной версии сайта
	-p \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ загрузка всех файлов для корректного отображения HTML-страниц
	--convert-links \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ ссылки приобразованы для локального просмотра
	-P ./ \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ назначение дериктории для скачивания
wget -r -A.html https:// \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ загрузка файлов определенного типа
wget --reject=png https:// \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ пропуск файлов определенного типа
wget -o NAME.log https:// \\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\ загрузка с использованием собственого .log файла
